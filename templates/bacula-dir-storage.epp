<%
  |
    String $name,
    String $address,
    Integer $port,
    String[1] $password,
    String $device_name,
    String $media_type,
    Integer $max_concurrent_jobs,
  |
-%>
Storage {
    Name       = <%= $name %>-sd
    Address    = <%= $address %>
    SDPort     = <%= $port %>
    Password   = "<%= $password %>"
    Device     = <%= $device_name %>
    Media Type = <%= $media_type %>
    Maximum Concurrent Jobs = <%= $max_concurrent_jobs %>
<%= epp('bacula/_tls_client.epp') -%>
}

