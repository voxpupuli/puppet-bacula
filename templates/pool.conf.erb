Pool {
    Name                 = <%= @name %>
    Pool Type            = <%= @pooltype %>
    Recycle              = <%= @recycle %>
    AutoPrune            = <%= @autoprune %>
<% if @volret -%>
    Volume Retention     = <%= @volret %>
<% end -%>
<% if @maxvoljobs -%>
    Maximum Volume Jobs  = <%= @maxvoljobs %>
<% end -%>
<% if @maxvolbytes -%>
    Maximum Volume Bytes = <%= @maxvolbytes %>
<% end -%>
<% if @label -%>
    Label Format         = <%= @label %>
<% end -%>
<% if @maxvols -%>
    Maximum Volumes      = <%= @maxvols %>
<% end -%>
    Storage              = <%= @storage %>-sd
    Action On Purge      = <%= @purgeaction %>
}

