Director {
    Name     = <%= @director_name %>-dir
    Password = "<%= @password %>"
<%= scope.function_template(['bacula/_tls_server.erb']) -%>
}

Director {
    Name     = <%= @director_name %>-mon
    Password = "<%= @password %>"
    Monitor  = yes
<%= scope.function_template(['bacula/_tls_server.erb']) -%>
}

FileDaemon {
    Name                    = <%= @client %>-fd
<% if @listen_address -%>
    FDAddresses             = {
<%= scope.function_template(['bacula/_listen.erb']) -%>
    }
<% end -%>
    WorkingDirectory        = <%= @homedir %>
    Pid Directory           = <%= @rundir %>
    Maximum Concurrent Jobs = <%= @max_concurrent_jobs %>
<%= scope.function_template(['bacula/_tls_client.erb']) -%>
<%= scope.function_template(['bacula/_pki.erb']) -%>
}
